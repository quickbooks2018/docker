# Windwows 2019 Server
docker run --name windows-iis -p 80:80 --restart unless-stopped -id mcr.microsoft.com/windows/servercore/iis:windowsservercore-ltsc2019



# Windwows 2022 Server
docker run --name windows-iis -p 80:80 --restart unless-stopped -id mcr.microsoft.com/windows/servercore/iis:windowsservercore-ltsc2022
